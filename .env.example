# SonarQube Configuration
SONAR_URL=https://sonarcloud.io
SONAR_TOKEN=
SONAR_PROJECT_KEY=

# Repository Configuration
REPO_ROOT=/path/to/your/git/repository

# AI Configuration
AI_PROVIDER=gemini  # Options: mistral, gemini, mock
AI_API_KEY=your-ai-api-key-here
AI_MODEL=mistral-small  # Mistral: mistral-tiny, mistral-small, mistral-medium, mistral-large
                        # Gemini: gemini-1.5-pro, gemini-1.5-flash, gemini-2.0-flash
AI_CUSTOM_URL=          # Optional: Custom API URL for AI provider
                        # Mistral default: https://api.mistral.ai/v1
                        # Gemini default: https://generativelanguage.googleapis.com/v1
AI_MAX_OUTPUT_TOKENS=8000
# GitLab Configuration (for batch commits)
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your-gitlab-token-here
GITLAB_PROJECT_ID=your-project-id
GITLAB_BRANCH=main
GITLAB_BATCH_SIZE=10
GITLAB_AUTO_COMMIT=false
GITLAB_USE_BATCH_COMMITS=false
GITLAB_CREATE_MR=false

# GitHub Configuration (alternative to GitLab)
GITHUB_URL=https://api.github.com
GITHUB_TOKEN=
GITHUB_REPO_OWNER=
GITHUB_REPO_NAME=
GITHUB_BRANCH=master
GITHUB_BATCH_SIZE=10
GITHUB_AUTO_COMMIT=false
GITHUB_CREATE_PR=false

# Processing Options
MAX_SMELLS=10
DRY_RUN=false

# Optional: Pull Request Filtering
# PULL_REQUEST=123
